<Window x:Class="shir_heler_project.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shir_heler_project"
        mc:Ignorable="d"
        Title="Sign In" Height="450" Width="400" ResizeMode="NoResize" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="325*"/>
            <ColumnDefinition Width="69*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/images/main_background.jpg"/>
        </Grid.Background>

        <Label Content="Sign in" FontStyle="Oblique"  FontWeight="Bold"  FontSize="40" FontFamily="sans" Margin="114,11,55,355"   />
        <Label Content="Username" Grid.ColumnSpan="2" Margin="148,63,-79,-63" />
        <TextBox Margin="107,94,73,303" Name="username_textbox" />
        <Label Content="Password" Grid.ColumnSpan="2" Margin="148,121,-79,-121" />
        <TextBox Margin="109,146,71,251"  Name="password_textbox"  />
        <Button Margin="141,182,100,219" Content="Sign in" Click="sign_in_button_click" />
        <Button Margin="141,208,100,193" Content="Sign up"  Click="sign_up_button_click" />

    </Grid>
</Window>
